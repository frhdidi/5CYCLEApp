<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbg"
    tools:context=".ChooseLoginRegister">

    <!-- 5cycle text -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="WELCOME TO                                                5CYCLE"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <!-- Learn recycling text -->
    <TextView
        android:id="@+id/text_5CYCLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="21dp"
        android:text="LEARN RECYCLING"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <!-- five R text-->
    <TextView
        android:id="@+id/text_fiveR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_5CYCLE"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="20dp"
        android:text="Reduce. Reuse. Recycle. Repair. Refuse"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <!-- 5Cycle motto text-->
    <TextView
        android:id="@+id/text_motto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_fiveR"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="20dp"
        android:text="Learn how to create a Green Earth around campus"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <!--Sign in button-->
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_motto"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:padding="8dp"
        android:text="Log In"
        android:textColor="#159f98" />

    <!--Sign up button-->
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#159f98"
        android:gravity="center"
        android:padding="10dp"
        android:text="Sign Up" />

</RelativeLayout>